        if(($("#start_date-edit").val()=='')||($("#start_time-edit").val()=='')||($("#end_date-edit").val()=='')||($("#end_time-edit").val()=='')){
            noti_bubble('{{langmod.ARERRO1}}','{{langmod.ARERROR}}','error',false,false,'3000',true);
