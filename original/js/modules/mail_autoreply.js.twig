    }else{
        var sendonlydate=0;
        var start_dateedit='';
        var start_timeedit='';
        var end_dateedit='';
        var end_timeedit='';
    }
    $.ajaxSetup({ headers: { 'csrftoken' : '{{ tokenajax }}' } });
    btnporcess('off','btn-updautof','{{ langmod.AULABEL5 }}');
