function savedp(){
    $("#alert1").hide();
    var swerror=0;
    var radio=$('input:radio[name=radio1]:checked').val();
    if(radio==0){ var ruta=$("#path1").val(); }else{ var ruta=$("#hiddenvalue").val(); }
    if(ruta==''){ swerror=1;}

    if($("#namedp").val()==''){ swerror=1;}
