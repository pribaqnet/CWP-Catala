    $(this).find('.fa').removeClass('fa-folder-open-o').addClass('fa-folder-o');
  }).click(function(){
    let curpath = $('#current_path_dirsel').val();
    let dir = $(this).data('dir');
    if(dir == '..'){
      let pieces = curpath.split('/');
      pieces.pop();
      pieces.pop();
      dir = pieces.join('/')
    }else{
      dir = curpath + dir;
    }
    callDirList(dir);
  });
  $('#dir_list').slideDown('fast');
}
function table_domain(list){
