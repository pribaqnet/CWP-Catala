function refrescron(){
    $.ajaxSetup({ headers: { 'csrftoken' : '{{ tokenajax }}' } });
    $.ajax({
        type: "POST",
        url: "./{{users}}/index.php?module=crontab&acc=refrescron",
        complete: function(datos){
            $("#table_crons").html('');
